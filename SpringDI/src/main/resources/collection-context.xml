<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dev" class="ex03.DatabaseDev">
		<property name="url" value="jdbc:mysql://localhost~~~" />
		<property name="uid" value="coding404" />
		<property name="upw" value="1234" />
	</bean>

	<!-- 컬렉션을 주입하는 방법 -->
	<!-- ArrayList -->

	<bean id="customer" class="ex04.Customer">
		<property name="lists">
			<list>
				<value>문자열</value>
				<value>홍길동</value>
				<value>이순신</value>
			</list>
		</property>

		<property name="dao">
			<list>
				<bean class="ex03.MemberDAO"> <!-- 여기서는 id 안 써도 된다 -->
					<property name="dataSource" ref="dev"></property>
				</bean>
			</list>
		</property>

		<property name="map">
			<map>
				<entry key="xxx123" value="홍길동" />
				<entry key="aaa123">
					<bean class="ex03.MemberDAO"> <!-- 여기서는 id 안 써도 된다 -->
						<property name="dataSource" ref="dev"></property>
					</bean>
				</entry>
			</map>
		</property>
	</bean>
   </beans>